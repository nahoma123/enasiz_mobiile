<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">


    <LinearLayout
        android:id="@+id/l_time"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
android:layout_weight="28"
            android:gravity="center_vertical"
            android:text="Jan, 28, 2018"
            android:textSize="23sp"/>

        <TextView
            android:id="@+id/tv_starttime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:textSize="23sp"
            android:textColor="@color/click_Start_color"
            android:gravity="center_vertical|start"
            android:text="00 : 00 Am"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="-"
            android:textSize="23sp"
            />
        <TextView
            android:id="@+id/tv_endttime"
            android:textColor="@color/click_Start_color"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:textSize="23sp"
            android:gravity="center_vertical|end"
            android:text="00 : 00 Am"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l_teams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_time"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hometeam"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="center_vertical|end"
            android:paddingRight="8dp"
            android:text="Man united"
            android:textColor="@color/colorPrimaryDark"

            android:textSize="28sp"

            />

        <TextView
            android:id="@+id/tv_vs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTintMode="src_over"
            android:gravity="center"

            android:text="Vs"
            android:textColor="@color/red"
            android:textSize="52sp"/>

        <TextView
            android:id="@+id/tv_awayteam"
            android:layout_width="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="center_vertical|start"
            android:paddingLeft="8dp"
            android:text="Arsenal"
            android:textSize="28sp"

            />
    </LinearLayout>

</RelativeLayout>